{
  "name": "layerJS",
  "description": "layerJS, a lean javascript UX framework",
  "author": "LayerJs",
  "version": "0.4.2",
  "devDependencies": {
    "browserify": "latest",
    "jasmine": "latest",
    "jasmine-expect": "latest",
    "rimraf": "latest",
    "jsdom": "8.5.0",
    "mkdirp": "latest",
    "file-save": "latest",
    "uglifyjs": "latest",
    "fs-extra": "latest",
    "jshint": "latest",
    "protractor": "latest",
    "perfcollector.js": "latest",
    "globule" : "latest",
    "xmlhttprequest": "latest",
    "nock": "latest",
    "scripty" : "latest",
    "uglifyjs" : "latest",
    "istanbul" : "latest",
    "lite-server": "latest"
  },
  "scripts": {
    "clean": "rimraf build/* dist/*",
    "jshint": "jshint src",

    "postinstall": "webdriver-manager update --standalone && webdriver-manager update --ie",

    "prebuild": "npm run clean && npm run test",
    "build": "npm run build:scripts -s",
    "build:scripts": "scripty && npm run package",
    "build:compressed": "scripty && npm run package",
    "package": "scripty",
    "zip": "scripty",
    "lite": "lite-server",

    "buildExamples": "scripty",

    "pretest": "npm run jshint",

    "test": "jasmine JASMINE_CONFIG_PATH=./test/spec/support/jasmine.json",
    "debugtest": "node debug `which jasmine` JASMINE_CONFIG_PATH=./test/spec/support/jasmine.json",
    "browsertest" : "browserify ./test/specs.js > ./test/jasmine/lib/specs.js",

    "webdriverManagerStart": "webdriver-manager start",
    "e2eTest": "./node_modules/.bin/protractor protractorconfig.js",
    "e2e": "scripty",

    "buildSpecs": "scripty",

    "deployCDN": "scp ./dist/layerjs-$npm_package_version.js ./dist/layerjs-$npm_package_version.css www-data@layerjs.org:cdn/layerjs.org/libs/layerjs/",

    "deployExamples": "rsync -uaxv ./dist/examples/ www-data@layerjs.org:cdn/layerjs.org/examples/",

    "coverage" : "istanbul cover --include-all-sources node_modules/jasmine/bin/jasmine.js JASMINE_CONFIG_PATH=./test/spec/support/jasmine.json"
  }
}

{
  "name": "layerJS",
  "description": "Here you can put discription of the product",
  "author": "LayerJs",
  "version": "1.0.0",
  "devDependencies": {
    "browserify": "latest",
    "jasmine": "latest",
    "jasmine-expect": "latest",
    "rimraf": "latest",
    "jsdom": "latest",
    "mkdirp": "latest",
    "file-save": "latest",
    "uglifyjs": "latest",
    "fs-extra": "latest",
    "jshint": "latest",
    "protractor": "latest",
    "perfcollector.js": "latest"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "jshint": "jshint src",

    "postinstall": "webdriver-manager update --standalone && webdriver-manager update --ie",

    "prebuild": "npm run clean && npm run test",
    "build": "npm run build:scripts -s",
    "build:scripts": "mkdirp dist && browserify -e src/layerjs.js -o dist/layerjs.js && npm run build:copywithversionnumber",
    "build:compressed": "mkdirp dist && browserify -e src/layerjs.js | uglifyjs -c -m -o dist/layerjs.js && npm run build:copywithversionnumber",
    "build:copywithversionnumber": "node ./.build/copywithversionnumber.js",

    "pretest": "npm run jshint",
    "test": "jasmine JASMINE_CONFIG_PATH=./test/spec/support/jasmine.json",
    "debugtest": "node debug `which jasmine` JASMINE_CONFIG_PATH=./test/spec/support/jasmine.json",


    "correctDatasets": "node ./test/scripts/correctDatasets.js",

    "webdriverManagerStart": "webdriver-manager start",
    "e2eTest": "./node_modules/.bin/protractor protractorconfig.js"
  }
}
